{
  "name": "baseguard",
  "version": "1.0.3",
  "description": "BaseGuard - Never ship incompatible code again. Intelligent browser compatibility enforcement with AI-powered analysis and autonomous fixing.",
  "main": "dist/index.js",
  "bin": {
    "base": "bin/base.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:e2e": "vitest --run tests/e2e/",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run test",
    "release": "npm version patch && npm publish",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "browser-compatibility",
    "baseline",
    "web-standards",
    "cli",
    "ai",
    "automation",
    "git-hooks",
    "compatibility-checker",
    "web-features",
    "progressive-enhancement",
    "polyfills",
    "gemini",
    "jules",
    "code-fixing",
    "linting",
    "static-analysis",
    "developer-tools",
    "frontend",
    "javascript",
    "css",
    "html",
    "react",
    "vue",
    "svelte"
  ],
  "author": "BaseGuard Team",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6",
    "@vue/compiler-sfc": "^3.3.13",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "figlet": "^1.9.3",
    "glob": "^10.3.10",
    "gradient-string": "^2.0.2",
    "husky": "^8.0.3",
    "inquirer": "^9.2.12",
    "node-fetch": "^3.3.2",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "postcss": "^8.4.32",
    "postcss-selector-parser": "^6.0.13",
    "svelte": "^4.2.8",
    "web-features": "^0.8.4"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/figlet": "^1.7.0",
    "@types/glob": "^8.1.0",
    "@types/gradient-string": "^1.1.6",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebuka1017/baseguard.git"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/ebuka1017/baseguard/issues"
  },
  "homepage": "https://github.com/ebuka1017/baseguard#readme"
}
